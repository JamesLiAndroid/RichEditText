<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:right="@dimen/shadow_dimen">
        <shape android:shape="rectangle">

            <gradient
                android:angle="0"
                android:endColor="@color/endColor"
                android:startColor="@color/startColor" />
        </shape>
    </item>
    <item android:top="@dimen/shadow_dimen">
        <shape android:shape="rectangle">

            <gradient
                android:angle="90"
                android:endColor="@color/endColor"
                android:startColor="@color/startColor" />
        </shape>
    </item>
    <item android:left="@dimen/shadow_dimen">
        <shape android:shape="rectangle">

            <gradient
                android:angle="180"
                android:endColor="@color/endColor"
                android:startColor="@color/startColor" />
        </shape>
    </item>
    <item android:bottom="@dimen/shadow_dimen">
        <shape android:shape="rectangle">

            <gradient
                android:angle="270"
                android:endColor="@color/endColor"
                android:startColor="@color/startColor" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/background_dimen"
        android:left="@dimen/background_dimen"
        android:right="@dimen/background_dimen"
        android:top="@dimen/background_dimen">
        <shape android:shape="rectangle">

            <solid android:color="#ffffff" />

        </shape>
    </item>

</layer-list>